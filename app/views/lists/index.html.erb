

<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Your Movie Lists:</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container">
  <h1>Lists</h1>
  <ul>
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <% if list.photo.attached?%>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <% else %>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
        <% end %>
          <div>
            <%= list.name %>
          </div>
          <%# <%= cl_image_tag @list.photo %>
          <%# <%= link_to "delete", list_path(@list), method: :delete %>
        <% end %>
        </div>
    <% end %>
  </ul>
</div>

<%= link_to new_list_path do %>
  <div class="text-center text-black">
    <i class="fa fa-plus"></i> Add a new list
  </div>
<% end %>
